<!DOCTYPE html>
<html>

<head>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>
    <%= court.name %> - คิว
  </title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/qrcodejs@1.0.0/qrcode.min.js"></script>
  <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>

  <style>
    .btn {
      min-width: 70px;
      margin-bottom: 6px;
    }

    @media (max-width:576px) {
      .queue-actions {
        flex-direction: column;
        gap: 6px;
      }
    }

    /* ===== ACTIVE MATCH ===== */
    .active-match-card {
      border: 3px solid #0d6efd;
      border-radius: 16px;
      background: #fff;
      padding: 18px;
    }

    .team-box {
      border-radius: 14px;
      padding: 18px;
      height: 100%;
    }

    .team-name {
      font-size: 1.8rem;
      font-weight: 800;
      line-height: 1.2;
      word-break: break-word;
    }

    .team-meta {
      font-size: 0.95rem;
      color: #555;
    }

    .vs-badge {
      font-size: 1.4rem;
      font-weight: 800;
      color: #666;
    }

    @media (max-width:576px) {
      .team-name {
        font-size: 1.4rem;
      }
    }

    .court-title {
      max-width: 60%;
      white-space: normal;
      word-break: break-word;
      margin-bottom: 0;
    }

    .court-actions {
      flex-shrink: 0;
    }

    .live-indicator {
      display: inline-block;
      width: 10px;
      height: 10px;
      background-color: #28a745;
      border-radius: 50%;
      margin-left: 8px;
      animation: pulse 1.5s infinite;
    }

    @keyframes pulse {
      0% {
        opacity: 1;
      }
      50% {
        opacity: 0.5;
      }
      100% {
        opacity: 1;
      }
    }

    /* Drag and drop styles */
    .queue-item {
      user-select: none;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      transition: background-color 0.2s;
    }

    .queue-item:active {
      cursor: grabbing;
    }

    .queue-item.dragging {
      opacity: 0.5;
      background-color: #f8f9fa !important;
    }

    .queue-item.drag-over {
      background-color: #e7f3ff !important;
      border-bottom: 3px solid #0d6efd;
    }

    .drag-handle {
      cursor: grab;
      color: #999;
      margin-right: 8px;
      display: flex;
      align-items: center;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
      flex-shrink: 0;
      touch-action: none;
    }

    .drag-handle:active {
      cursor: grabbing;
    }

    .disconnection-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: rgba(255, 255, 255, 0.9);
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1000;
    }

    .disconnection-content {
      text-align: center;
    }

    .disconnection-icon {
      font-size: 4rem;
      color: #dc3545;
      margin-bottom: 1rem;
    }

    .disconnection-text {
      font-size: 1.5rem;
      font-weight: bold;
      color: #dc3545;
      margin-bottom: 0.5rem;
    }

    .match-container-wrapper {
      position: relative;
    }

    .action-buttons-disabled {
      opacity: 0.5;
      pointer-events: none;
    }
  </style>
</head>

<body class="bg-light">

  <div class="container mt-4">

    <div class="d-flex justify-content-between align-items-start mb-3">
      <h3 class="court-title">
        <%= court.name %>
        <span class="live-indicator" id="liveIndicator"></span>
      </h3>
      <div class="court-actions">
        <a href="/" class="btn btn-outline-secondary">ย้อนกลับ</a>
        <a href="/court/<%= court.id %>/history" class="btn btn-outline-primary">ดูประวัติแมตช์</a>
        <div id="courtQR"></div>
      </div>
    </div>

    <!-- JOIN QUEUE -->
    <form action="/court/<%= court.id %>/join" method="POST" class="mb-3" id="joinForm">
      <div class="input-group">
        <input name="name" id="playerNameInput" class="form-control" placeholder="ชื่อคู่" required />
        <button class="btn btn-primary" type="submit">เพิ่มคู่</button>
      </div>
    </form>

    <!-- ACTION BUTTONS -->
    <div id="actionButtonsContainer" class="mb-4 d-flex gap-2 queue-actions">
      <button class="btn btn-success" onclick="socket.emit('start-match', parseInt(courtId))">เริ่มแมตช์</button>
      <button class="btn btn-warning" onclick="socket.emit('reset-match', parseInt(courtId))">รีเซ็ตแมตช์</button>
      <a href="/court/<%= court.id %>/clear-queue" class="btn btn-danger"
        onclick="return confirm('ต้องการลบคิวทั้งหมดใช่หรือไม่?')">
        ล้างคิวทั้งหมด
      </a>
      <a href="/court/<%= court.id %>/history/clear" class="btn btn-outline-danger"
        onclick="return confirm('ต้องการลบประวัติแมตช์ของคอร์ทนี้ใช่หรือไม่?')">
        ล้างประวัติ
      </a>
      <a href="/court/<%= court.id %>/undo" class="btn btn-outline-dark"
        onclick="return confirm('ต้องการย้อนกลับคิวเมื่อครั้งก่อนใช่หรือไม่?')">
        Undo
      </a>
    </div>

    <!-- ACTIVE MATCH -->
    <h4 class="mb-3">แมตช์ที่กำลังเล่น</h4>

    <div id="matchContainerWrapper" class="match-container-wrapper">
      <div id="matchContainer">
        <div class="alert alert-secondary text-center">
          คอร์ทว่าง
        </div>
      </div>
    </div>

    <!-- QUEUE -->
    <h4 class="mb-3">คิวที่กำลังต่อ (คู่) - ลากเพื่อจัดลำดับ</h4>

    <ul class="list-group mb-4" id="queueContainer">
      <li class="list-group-item text-center">คิววาง</li>
    </ul>

  </div>

  <script>
    const courtId = "<%= court.id %>";
    const socket = io();
    let draggedItem = null;
    let matchTimerInterval = null;
    let matchStartTimestamp = null;

    function formatDuration(ms) {
      if (!ms || ms < 0) ms = 0;
      const totalSeconds = Math.floor(ms / 1000);
      const hours = Math.floor(totalSeconds / 3600);
      const minutes = Math.floor((totalSeconds % 3600) / 60);
      const seconds = totalSeconds % 60;
      if (hours > 0) {
        return `${String(hours).padStart(2,'0')}:${String(minutes).padStart(2,'0')}:${String(seconds).padStart(2,'0')}`;
      }
      return `${String(minutes).padStart(2,'0')}:${String(seconds).padStart(2,'0')}`;
    }

    function startMatchTimer(ts) {
      stopMatchTimer();
      matchStartTimestamp = Number(ts) || Date.now();
      const el = document.getElementById('matchTimer');
      if (!el) return;
      function tick() {
        const elapsed = Date.now() - matchStartTimestamp;
        el.textContent = formatDuration(elapsed);
      }
      tick();
      matchTimerInterval = setInterval(tick, 1000);
    }

    function stopMatchTimer() {
      if (matchTimerInterval) {
        clearInterval(matchTimerInterval);
        matchTimerInterval = null;
      }
      const el = document.getElementById('matchTimer');
      if (el) el.textContent = '';
    }

    // Generate QR Code
    const url = `${location.origin}/court/${courtId}`;
    new QRCode(document.getElementById("courtQR"), {
      text: url,
      width: 100,
      height: 100
    });

    // Join court room on page load
    socket.emit("join-court", courtId);

    // Listen for court state updates
    socket.on(`court:${courtId}`, (data) => {
      updateMatchDisplay(data.match);
      updateQueueDisplay(data.queue);
      updateLiveIndicator();
    });

    // Handle join form
    document.getElementById('joinForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const name = document.getElementById('playerNameInput').value.trim();
      if (!name) return;
      socket.emit('join-queue', { courtId: parseInt(courtId), name });
      document.getElementById('playerNameInput').value = '';
    });

    // Update match display
    function updateMatchDisplay(match) {
      const container = document.getElementById("matchContainer");
      
      if (!match) {
        stopMatchTimer();
        container.innerHTML = '<div class="alert alert-secondary text-center">คอร์ทว่าง</div>';
        return;
      }

      const m = match;
      container.innerHTML = `
        <div class="active-match-card mb-4">
          <div class="row align-items-center g-3">
            <!-- TEAM A -->
            <div class="col-md-5">
              <div class="team-box bg-success-subtle">
                <div class="team-name text-success">
                  Team A<br>
                  ${escapeHtml(m.teamA)}
                </div>
                <div class="team-meta mt-1">
                  เล่นแล้ว: ${m.matchesPlayedA} รอบ
                </div>
                <div class="mt-3 d-grid gap-2">
                  <button class="btn btn-success btn-lg" onclick="socket.emit('end-match', { courtId: parseInt(courtId), winner: 'A' })">ทีม A ชนะ</button>
                  ${m.matchesPlayedA === 0 
                    ? `<button class="btn btn-warning" onclick="socket.emit('add-match', { courtId: parseInt(courtId), side: 'A' })">+1</button>` 
                    : `<button class="btn btn-secondary" onclick="socket.emit('minus-match', { courtId: parseInt(courtId), side: 'A' })">-1</button>`
                  }
                </div>
              </div>
            </div>
            <!-- VS -->
            <div class="col-md-2 text-center">
              <div class="vs-badge">VS</div>
            </div>
            <!-- TEAM B -->
            <div class="col-md-5">
              <div class="team-box bg-danger-subtle">
                <div class="team-name text-danger">
                  Team B<br>
                  ${escapeHtml(m.teamB)}
                </div>
                <div class="team-meta mt-1">
                  เล่นแล้ว: ${m.matchesPlayedB} รอบ
                </div>
                <div class="mt-3 d-grid gap-2">
                  <button class="btn btn-danger btn-lg" onclick="socket.emit('end-match', { courtId: parseInt(courtId), winner: 'B' })">ทีม B ชนะ</button>
                  ${m.matchesPlayedB === 0 
                    ? `<button class="btn btn-warning" onclick="socket.emit('add-match', { courtId: parseInt(courtId), side: 'B' })">+1</button>` 
                    : `<button class="btn btn-secondary" onclick="socket.emit('minus-match', { courtId: parseInt(courtId), side: 'B' })">-1</button>`
                  }
                </div>
              </div>
            </div>
          </div>
          <div class="text-muted text-center small mt-3">
            เริ่มแมตช์เมื่อ: ${new Date(Number(m.timestamp)).toLocaleString('th-TH')}
          </div>
          <div class="text-center mt-2"> 
            <span id="matchTimer" style="font-size: 1.5rem; font-weight: bold; color: #333;"></span>
          </div>
        </div>
      `;
      // start timer
      startMatchTimer(m.timestamp);
    }

    // Update queue display with drag & drop
    function updateQueueDisplay(queue) {
      const container = document.getElementById("queueContainer");
      
      if (!queue || queue.length === 0) {
        container.innerHTML = '<li class="list-group-item text-center">คิววาง</li>';
        return;
      }

      container.innerHTML = queue.map((q, i) => `
        <li class="list-group-item queue-item" data-queue-id="${q.id}">
          <div class="d-flex align-items-center gap-2 mb-2" style="flex-wrap: wrap;">
            <span class="drag-handle" draggable="true">☰</span>
            <strong>${i + 1}.</strong>
            <span id="name-text-${q.id}" style="word-break: break-word; flex: 1 1 auto;">${escapeHtml(q.name)}</span>
            <span class="badge bg-info" style="white-space: nowrap;">~${q.estimatedStartMinutes || 0} นาที</span>
          </div>
          <div class="d-flex flex-wrap gap-2">
            <button id="edit-btn-${q.id}" class="btn btn-sm btn-outline-primary" type="button"
              onclick="enableEdit('${q.id}')">แก้ชื่อ</button>
            <form id="edit-form-${q.id}" class="d-none d-flex align-items-center gap-2" onsubmit="handleRenameSubmit(event, '${q.id}')">
              <input name="name" value="${escapeHtml(q.name)}" class="form-control form-control-sm"
                style="width:140px" maxlength="100" required autofocus />
              <button class="btn btn-sm btn-outline-secondary" type="submit">แก้</button>
            </form>
            <a href="/court/${courtId}/remove/${q.id}" class="btn btn-sm btn-outline-danger">ลบ</a>
          </div>
        </li>
      `).join('');

      // Add drag event listeners
      setupDragAndDrop();
    }

    // Setup drag and drop
    function setupDragAndDrop() {
      const items = document.querySelectorAll('.queue-item');
      let touchItem = null;
      let touchStartY = 0;
      
      items.forEach(item => {
        const handle = item.querySelector('.drag-handle');
        
        // Desktop drag events - only on handle
        handle.addEventListener('dragstart', (e) => {
          draggedItem = item;
          item.classList.add('dragging');
          e.dataTransfer.effectAllowed = 'move';
        });

        handle.addEventListener('dragend', (e) => {
          item.classList.remove('dragging');
          items.forEach(i => i.classList.remove('drag-over'));
          draggedItem = null;
        });

        item.addEventListener('dragover', (e) => {
          if (!draggedItem) return;
          e.preventDefault();
          e.dataTransfer.dropEffect = 'move';
          
          if (item !== draggedItem) {
            item.classList.add('drag-over');
          }
        });

        item.addEventListener('dragleave', (e) => {
          item.classList.remove('drag-over');
        });

        item.addEventListener('drop', (e) => {
          if (!draggedItem) return;
          e.preventDefault();
          
          if (item !== draggedItem) {
            const allItems = [...document.querySelectorAll('.queue-item')];
            const draggedIndex = allItems.indexOf(draggedItem);
            const targetIndex = allItems.indexOf(item);
            
            if (draggedIndex < targetIndex) {
              item.parentNode.insertBefore(draggedItem, item.nextSibling);
            } else {
              item.parentNode.insertBefore(draggedItem, item);
            }
            
            sendQueueOrder();
          }
          
          item.classList.remove('drag-over');
        });

        // Mobile touch events - only on handle
        handle.addEventListener('touchstart', (e) => {
          e.preventDefault();
          touchItem = item;
          touchStartY = e.touches[0].clientY;
          item.classList.add('dragging');
        });

        handle.addEventListener('touchmove', (e) => {
          if (!touchItem) return;
          e.preventDefault();
          
          const touchY = e.touches[0].clientY;
          const allItems = [...document.querySelectorAll('.queue-item')];
          
          for (let other of allItems) {
            if (other === touchItem) continue;
            
            const rect = other.getBoundingClientRect();
            if (touchY >= rect.top && touchY <= rect.bottom) {
              other.classList.add('drag-over');
            } else {
              other.classList.remove('drag-over');
            }
          }
        });

        handle.addEventListener('touchend', (e) => {
          if (!touchItem) return;
          
          const touchY = e.changedTouches[0].clientY;
          const allItems = [...document.querySelectorAll('.queue-item')];
          
          for (let other of allItems) {
            if (other === touchItem) continue;
            
            const rect = other.getBoundingClientRect();
            if (touchY >= rect.top && touchY <= rect.bottom) {
              const draggedIndex = allItems.indexOf(touchItem);
              const targetIndex = allItems.indexOf(other);
              
              if (draggedIndex < targetIndex) {
                other.parentNode.insertBefore(touchItem, other.nextSibling);
              } else {
                other.parentNode.insertBefore(touchItem, other);
              }
              
              sendQueueOrder();
              break;
            }
          }
          
          touchItem.classList.remove('dragging');
          allItems.forEach(i => i.classList.remove('drag-over'));
          touchItem = null;
        }, { passive: true });
      });
    }

    // Send updated queue order to server
    function sendQueueOrder() {
      const items = document.querySelectorAll('.queue-item');
      const newOrder = Array.from(items).map(item => ({
        id: parseInt(item.dataset.queueId),
        position: Array.from(items).indexOf(item) + 1
      }));

      // Send to server
      fetch(`/court/${courtId}/reorder-queue`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ order: newOrder })
      }).catch(err => console.error('Reorder failed:', err));
    }

    // Helper to escape HTML
    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // Enable edit mode
    function enableEdit(id) {
      document.getElementById(`name-text-${id}`).classList.add("d-none");
      document.getElementById(`edit-btn-${id}`).classList.add("d-none");
      document.getElementById(`edit-form-${id}`).classList.remove("d-none");
    }

    // Handle rename form submission
    function handleRenameSubmit(e, queueId) {
      e.preventDefault();
      const form = e.target;
      const name = form.querySelector('input[name="name"]').value.trim();
      if (!name) return;
      socket.emit('rename-queue', { courtId: parseInt(courtId), queueId: parseInt(queueId), name });
      document.getElementById(`edit-form-${queueId}`).classList.add("d-none");
      document.getElementById(`name-text-${queueId}`).classList.remove("d-none");
      document.getElementById(`edit-btn-${queueId}`).classList.remove("d-none");
    }

    // Update live indicator visibility
    function updateLiveIndicator() {
      const indicator = document.getElementById("liveIndicator");
      indicator.style.backgroundColor = "#28a745";
      removeDisconnectionOverlay();
      document.getElementById("actionButtonsContainer").classList.remove("action-buttons-disabled");
    }

    function showDisconnectionOverlay() {
      const wrapper = document.getElementById("matchContainerWrapper");
      let overlay = document.getElementById("disconnectionOverlay");
      
      if (overlay) {
        overlay.remove();
      }
      
      overlay = document.createElement("div");
      overlay.id = "disconnectionOverlay";
      overlay.className = "disconnection-overlay";
      overlay.innerHTML = `
        <div class="disconnection-content">
          <div class="disconnection-icon">⚠️</div>
          <div class="disconnection-text">เซิร์ฟเวอร์หลุดการเชื่อมต่อ โปรดรอสักครู่</div>
        </div>
      `;
      wrapper.appendChild(overlay);
      document.getElementById("actionButtonsContainer").classList.add("action-buttons-disabled");
    }

    function removeDisconnectionOverlay() {
      const overlay = document.getElementById("disconnectionOverlay");
      if (overlay) {
        overlay.remove();
      }
    }

    // Show offline when disconnected
    socket.on("disconnect", () => {
      document.getElementById("liveIndicator").style.backgroundColor = "#dc3545";
      showDisconnectionOverlay();
    });

    socket.on("connect", () => {
      document.getElementById("liveIndicator").style.backgroundColor = "#28a745";
      removeDisconnectionOverlay();
      document.getElementById("actionButtonsContainer").classList.remove("action-buttons-disabled");
      socket.emit("join-court", courtId);
    });
  </script>

</body>

