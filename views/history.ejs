<!-- views/history.ejs -->
<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>History <%= court ? ('- ' + court.name) : '' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
</head>
<body class="bg-light">
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3>Match History <%= court ? (' - ' + court.name) : '' %></h3>
      <div>
        <% if (court) { %>
          <a href="/court/<%= court.id %>" class="btn btn-outline-secondary">Back</a>
          <a href="/court/<%= court.id %>/history/clear" class="btn btn-danger" onclick="return confirm('Clear this court history?')">Clear</a>
        <% } else { %>
          <a href="/" class="btn btn-outline-secondary">Home</a>
          <a href="/history/clear" class="btn btn-danger" onclick="return confirm('Clear ALL history?')">Clear All</a>
        <% } %>
      </div>
    </div>

    <% if (!history || history.length === 0) { %>
      <div class="alert alert-info">No history yet.</div>
    <% } else { %>
      <ul class="list-group">
        <% history.forEach(h => { %>
          <li class="list-group-item">
            <strong class="text-success"><%= h.teamA %></strong>
            <span class="mx-2">vs</span>
            <strong class="text-danger"><%= h.teamB %></strong>
            <% if (h.winner) { %>
              <div class="mt-1">Winner: <span class="badge bg-primary"><%= h.winner %></span></div>
            <% } %>
            <div class="mt-2 text-muted small">Played at: <%= new Date(Number(h.timestamp)).toLocaleString('en-GB') %></div>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>
</body>
</html>
