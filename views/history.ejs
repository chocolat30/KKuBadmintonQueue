<!-- views/history.ejs -->
<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>ประวัติแมตช์</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
</head>
<body class="bg-light">
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3>ประวัติ <%= court ? (' - ' + court.name) : '' %></h3>
      <div>
        <% if (court) { %>
          <a href="/court/<%= court.id %>" class="btn btn-outline-secondary">ย้อนกลับ</a>
          <a href="/court/<%= court.id %>/history/clear" class="btn btn-danger" onclick="return confirm('ต้องการล้างประวัติการเล่นของคอร์ทนี้?')">ล้างทั้งหมด</a>
        <% } else { %>
          <a href="/" class="btn btn-outline-secondary">ย้อนกลับ</a>
          <a href="/history/clear" class="btn btn-danger" onclick="return confirm('ต้องการล้างประวัติการเล่นทั้งหมดทุกคอร์ท?')">ล้างทั้งหมด</a>
        <% } %>
      </div>
    </div>

    <% if (!history || history.length === 0) { %>
      <div class="alert alert-info">ยังไม่มีประวัติการเล่น</div>
    <% } else { %>
      <ul class="list-group">
        <% 
          function formatDuration(ms) {
            if (!ms || ms < 0) return '-';
            const minutes = Math.floor(ms / 60000);
            const seconds = Math.floor((ms % 60000) / 1000);
            return `${minutes}:${String(seconds).padStart(2, '0')}`;
          }
        %>
        <% history.forEach((h, index) => { %>
          <li class="list-group-item">
            <div class="row">
              <div class="col-md-8">
                <strong class="text-success"><%= h.teamA %></strong>
                <span class="mx-2">vs</span>
                <strong class="text-danger"><%= h.teamB %></strong>
                <% if (h.winner) { %>
                  <div class="mt-1">ทีมที่ชนะ: <span class="badge bg-primary"><%= h.winner %></span></div>
                <% } %>
              </div>
              <div class="col-md-4 text-end">
                <div class="small text-muted">แมตช์ที่: <strong>#<%= history.length - index %></strong></div>
                <% if (h.duration) { %>
                  <div class="small text-muted">เวลาเล่น: <strong><%= formatDuration(h.duration) %></strong></div>
                <% } %>
              </div>
            </div>
            <div class="mt-2 text-muted small">เริ่มแมตช์ตอน: <%= new Date(Number(h.timestamp)).toLocaleString('th-TH') %></div>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>
</body>

<footer class="app-footer text-center text-muted">
  Made by <a href="https://github.com/chocolat30" target="_blank">P.Raccoon</a> | For the gang :-))
</footer>

</html>
