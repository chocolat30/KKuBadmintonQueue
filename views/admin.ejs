<!DOCTYPE html>
<html>
<head>
  <title>Admin â€“ Badminton Queue</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">

<div class="container mt-4">

  <h1 class="text-center mb-4">Admin Control Panel</h1>

  <!-- Current Match -->
  <h3>Current Match</h3>
  <ul class="list-group mb-3">
    <% if (match.length === 0) { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        No active match
        <a href="/start" class="btn btn-success btn-sm">Start Match</a>
      </li>
    <% } else { %>
      <% match.forEach(m => { %>
        <li class="list-group-item">

          <div class="fw-bold text-primary">Active Match</div>

          <div class="mt-2">
            <span class="badge bg-success">Team A (Pair <%= m.teamA_pair_id %>)</span>
          </div>

          <div class="mt-2">
            <span class="badge bg-danger">Team B (Pair <%= m.teamB_pair_id %>)</span>
          </div>

          <div class="mt-2 text-muted">
            Started at: <%= m.startTime %>
          </div>

          <div class="mt-3">
            <a href="/end" class="btn btn-warning">End Match</a>
          </div>

        </li>
      <% }) %>
    <% } %>
  </ul>

  <!-- Queue -->
  <h3>Queue</h3>
  <ul class="list-group">
    <% if (queue.length === 0) { %>
      <li class="list-group-item">Queue is empty</li>
    <% } else { %>
      <% queue.forEach((q, i) => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= i+1 %>.</strong> <%= q.name %>
          </div>
          <a href="/remove/<%= q.id %>" class="btn btn-danger btn-sm">Remove</a>
        </li>
      <% }) %>
    <% } %>
  </ul>

</div>

</body>
</html>
